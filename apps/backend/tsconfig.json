{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // 1. Tell TS to look in both node_modules and your local types folder
    "typeRoots": [
      "../../node_modules/@types", 
      "./src/shared/types"
    ]
  },
  // 2. Ensure everything in src is being watched
  "include": ["src/**/*", "src/shared/types/**/*"]
}
